{
  "manifest_version": 2,
  "name": "Notifications for JIRA",
  "version": "0.1",

  "description": "Creates notifications for JIRA activity",
  "icons": {
    "256": "icon.png"
  },

  "permissions": [
    "storage",
    "notifications",
    "cookies",
    "<all_urls>"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": ["dist/background.js"]
  }

}
